<!doctype html>
<html lang="fr">
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="../static/css/home.css">

    <title>Home page</title>

  </head>
  <body>
    <div class="top">
        <div class="profil">
            <div class="image"><img src="/static/img/pp1.png" alt="Photo de profil"></div>
            <div class="nom">
                <p class="username"> {{ user.username }} </p>
                <a href="/" class="deco">Deconnexion</a>
            </div>
        </div>
        <div class="haut">
            <div class="vues">
                <button disabled class="vue">Vue par échéances</button>
                <button class="vue">Vue par projets</button>
                <button class="vue">Vue par tâches</button>
            </div>
            <div class="plus"><button class="vue"> + </button></div>

        </div>
    </div>

    <div class="in">
        <div class="projets">

        {% block projects %}
            <p> {{ projects|lenght }}</p>
            {% for projet in projects %}
                <button class="projet" >{{ projet.name }}</button>
            {% endfor %}
        {% endblock %}

        </div>

        {%  block mess %}

        <div class="message">
            <div class="semaine">
                <p class="titre"> Pour cette semaine </p>


                {%  for object in semaines %}
                    <p class="date"> {{ object[0] }}</p>
                    {% if object|length==3 %}
                        <div class="echeance">
                            <span>Fin de tâches : {{ object[1].name }}</span>
                            <p class="fin"><span> Dans " {{ object[2].name }} "</span>
                            <span> {{ object[1].status }} </span></p>
                        </div class="echeance">
                    {% endif %}
                    {% if object|length==2 %}
                        <div class="echeance">Fin du projet : {{ object[1].name }}</div>
                    {% endif %}
                {% endfor %}

            </div>

            <div class="mois">
                <p class="titre"> Pour ce mois </p>

                {%  for object in mois %}
                    <p class="date"> {{ object[0] }}</p>
                    {% if object|length ==3 %}
                        <div class="echeance">
                            <span>Fin de tâches : {{ object[1].name }}</span>
                            <p class="fin"><span> Dans " {{ object[2].name }} "</span>
                            <span> {{ object[1].status }} </span></p>
                        </div>
                    {% endif %}
                    {% if object|length ==2 %}
                        <div class="echeance">Fin du projet : {{ object[1].name }}</div>
                    {% endif %}
                {% endfor %}


            </div>

            <div class="apres">
                <p class="titre"> Après </p>


                {%  for object in apres %}
                    <p class="date"> {{ object[0] }}</p>
                    {% if object|length==3 %}
                        <div class="echeance">
                            <span>Fin de tâches : {{ object[1].name }}</span>
                            <p class="fin"><span> Dans " {{ object[2].name }} "</span>
                            <span> {{ object[1].status }}</span></p>
                        </div>
                    {% endif %}
                    {% if object|length==2 %}
                        <div class="echeance">Fin du projet : {{ object[1].name }}</div>
                    {% endif %}
                {% endfor %}

            </div>

        </div>
         {%  endblock %}
    </div>

  </body>
</html>